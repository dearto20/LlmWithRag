<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nightLocationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/overnight_location"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addOvernightLocationButton"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:text="@string/add_to_database" />

            <Button
                android:id="@+id/removeOvernightLocationButton"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:text="@string/remove_from_database" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="#888888" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/weekendsLocationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weekends_location"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addWeekendsLocationButton"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:text="@string/add_to_database" />

            <Button
                android:id="@+id/removeWeekendsLocationButton"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:text="@string/remove_from_database" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="#888888" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stationaryTimeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stationary_time"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addStationaryTimeButton"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:text="@string/add_to_database" />

            <Button
                android:id="@+id/removeStationaryTimeButton"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:text="@string/remove_from_database" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="#888888" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/publicWiFiView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/public_wifi"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addPublicWiFiButton"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:text="@string/add_to_database" />

            <Button
                android:id="@+id/removePublicWiFiButton"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:text="@string/remove_from_database" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="#888888" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/preferredNavigationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preferred_navigation"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addPreferredNavigationButton"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:text="@string/add_to_database" />

            <Button
                android:id="@+id/removePreferredNavigationButton"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:text="@string/remove_from_database" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="#888888" />
    </LinearLayout>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="10dp"
        android:text="@string/reset_database" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="@string/title_embeddings_in_database"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/embeddingsInDatabaseView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="15sp"
        android:textStyle="bold" />
</LinearLayout>